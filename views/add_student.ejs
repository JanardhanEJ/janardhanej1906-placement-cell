<form
  class="w-50 mx-auto mt-4"
  action="/students/create-student"
  method="post"
  style="
    height: 100%;
    display: grid;
    place-content: center;
    /* background: white; */
    border-radius: 5px;
    box-shadow: 7px 7px 12px rgba(0, 0, 0, 0.05);
    padding: 50px 70px;
  "
>
  <!-- Form Heading -->
  <h3 style="text-align: center"><b><strong>Add Student</strong> </b></h3>

  <!-- Batch Field -->
  <fieldset>
    <label for="batch" style="color: white"><b>Batch</b></label>
    <div class="mb-3">
      <input type="text" class="form-control" id="batch" name="batch" />
    </div>
  </fieldset>

  <fieldset>
    <!-- Name Field -->
    <div class="mb-3">
      <label for="name" class="form-label" style="color: white"><b>Name</b></label>
      <input type="text" class="form-control" id="name" name="name" />
    </div>

    <!-- Email address Field -->
    <div class="mb-3">
      <label for="email" class="form-label" style="color: white"
        ><b>Email Address</b></label
      >
      <input
        type="email"
        class="form-control"
        id="email"
        placeholder="abc@gmail.com"
        name="email"
      />
    </div>

    <!-- Mobile Number Field -->
    <div class="mb-3">
      <label for="contactNumber" class="form-label" style="color: white"
        ><b>Mobile Number</b></label
      >
      <input
        type="text"
        class="form-control"
        id="contactNumber"
        name="contactNumber"
      />
    </div>

    <!-- College Name Field -->
    <div class="mb-3">
      <label for="college" class="form-label" style="color: white"
        ><b>College Name</b></label
      >
      <input type="text" class="form-control" id="college" name="college" />
    </div>

    <!-- Placement Status Field -->
    <div class="mb-3">
      <label for="placement" class="form-label" style="color: white"
        ><b>Placement Status</b></label
      >
      <select
        class="form-select"
        aria-label="Default select example"
        name="placement"
        id="placement"
      >
        <option value="Placed"><b>Placed</b></option>
        <option value="Not Placed"><b>Not Placed</b></option>
      </select>
    </div>
  </fieldset>

  <fieldset>
    <!-- DSA Score Field -->
    <div class="mb-3" style="display: flex; justify-content: space-between">
      <div class="mb-3 p-1">
        <label for="dsa" class="form-label" style="color: white"><b>DSA Score</b></label>
        <input type="text" class="form-control" id="dsa" name="dsa" />
      </div>

      <!-- Web Development Score Field -->
      <div class="mb-3 p-1">
        <label for="webd" class="form-label" style="color: white"
          ><b>Web Dev Score</b></label
        >
        <input type="text" class="form-control" id="webd" name="webd" />
      </div>

      <!-- React Score Field -->
      <div class="mb-3 p-1">
        <label for="react" class="form-label" style="color: white"><b>React Score</b></label>
        <input type="text" class="form-control" id="react" name="react" />
      </div>
    </div>
  </fieldset>
  <button type="submit" class="btn btn-success align-self-center">
  <b><strong>Create Student</strong></b>
  </button>
</form>
