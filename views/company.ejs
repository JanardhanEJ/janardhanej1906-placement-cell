<div class="w-75 mx-auto mt-5">
  <div class="row">
    <div class="col-6">
      <h1><b><strong>Interviews</strong></b></h1>
    </div>

    <div class="col-6 d-flex justify-content-end">
      <a
        href="/company/allocate"
        type="button"
        class="btn btn-success align-self-center"
        ><strong><b>Allocate Interview</b></strong></a
      >
    </div>
  </div>

  <% if(students.length> 0) {%>
  <div class="mt-3 mb-3">
    <table class="table table-bordered table-striped">
      <thead class="thead-dark">
        <tr>
          <th scope="col" class="text-center"><b><strong>Company</strong></b></th>
          <th scope="col" class="text-center"><b><strong>Student</strong></b></th>
          <th scope="col" class="text-center"><b><strong>Email</strong></b></th>
          <th scope="col" class="text-center"><b><strong>Contact</strong></b></th>
          <th scope="col" class="text-center"><b><strong>Batch</strong></b></th>
          <th scope="col" class="text-center"><b><strong>Interview Date</strong></b></th>
          <th scope="col" class="text-center"><b><strong>Result</strong></b></th>
        </tr>
      </thead>

      <tbody id="myTable">
        <% for(let student of students){%> <%i=0%> <% while(i<
        student.interviews.length){%>
        <tr class="row-ref">
          <th scope="row" class="text-center"><b><strong><%=student.interviews[i].company%></strong></b></th>
          <td class="text-center"><b><strong><%=student.name%></strong></b></td>
          <td class="text-center"><b><strong><%=student.email%></strong></b></td>
          <td class="text-center"><b><strong><%=student.contactNumber%></strong></b></td>
          <td class="text-center"><b><strong><%=student.batch%></strong></b></td>
          <td class="text-center"><b><strong><%=student.interviews[i].date%></strong></b></td>
          <td>
            <form
              style="
                display: flex;
                align-items: center;
                justify-content: center;
              "
              action="/company/update-status/<%=student.id%>"
              method="post"
            >
              <input
                hidden
                type="text"
                name="companyName"
                value="<%=student.interviews[i].company%>"
              />

              <select
                class="form-select"
                aria-label="Default select example"
                name="companyResult"
                id="status"
                style="min-width: 130px"
              >
                <option selected id="delete-options">
                  <%=student.interviews[i].result%>
                </option>
                <option value="Selected"><b><strong>Selected</strong></b></option>
                <option value="Not Selected"><b><strong>Not Selected</strong></b></option>
                <option value="On Hold"><b><strong>On Hold</strong></b></option>
                <option value="Pending"><b><strong>Pending</strong></b></option>
              </select>

              <button type="submit" class="btn btn-warning btn-small m-2">
                <b><strong>Update</strong></b>
              </button>
            </form>
          </td>
        </tr>
        <%i++%> <%}%> <%}%>
      </tbody>
    </table>
  </div>
  <%}else{%>
  <div class="w-75 mx-auto mt-5">
    <h2><strong><b>No Records found..</b></strong></h2>
  </div>

  <%}%>
</div>
